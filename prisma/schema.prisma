// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // Kita menggunakan MySQL
  url      = env("DATABASE_URL")
}

// Model untuk tabel pendaftaran
model Registration {
  id         Int      @id @default(autoincrement()) // Primary Key, auto-increment
  fullName   String
  email      String   @unique // Email harus unik
  ticketType String
  createdAt  DateTime @default(now()) // Timestamp saat data dibuat
}
